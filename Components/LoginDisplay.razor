<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">
            Hello, @context.User.Identity.Name!
        </a>
        <form method="post" action="/Logout">
            <button type="submit" class="nav-link btn btn-link">
                Log Out
            </button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">
            Register
        </a>
    </NotAuthorized>
</AuthorizeView>
